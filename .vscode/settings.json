{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },
  "salesforcedx-vscode-core.show-cli-success-msg": false,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "aurahelper.apexFormat.operator.addWhitespaceAfterOpenParenthesisOperator": true,
