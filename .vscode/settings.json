  "aurahelper.apexFormat.punctuation.addWhitespaceBeforeOpenCurlyBracket": true,
  "aurahelper.apexFormat.punctuation.maxBlankLines": 1,
  "editor.defaultFormatter": "VisualStudioExptTeam.vscodeintellicode",
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "aurahelper.documentation.useStandardJavaComments": true,
